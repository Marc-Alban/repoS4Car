{% extends 'base.html.twig' %}
{% block title %}
	Car-Show
{% endblock %}
{% block body %}
	<main>
		<div class="how-section1">
			<div class="row">
				<div class="col-md-12 how-img">
					{% if car.image.name is defined %}
						<img src="{{ asset('img/')~car.image.name }}" class=" img-fluid" alt=""/>
					{% else %}
						<p>Pas d'image ...</p>
					{% endif%}
				</div>
			</div>
			<div class="row ">
				<div class="col-md-12 d-flex ">
					{% for keyword in car.keywords %}
						<p class="m-1"> {{ keyword.name }}{% if not loop.last %} - {% endif %}</p>
					{% endfor %}
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<h4 class="text-center">Model:</h4>
					<h4 class="subheading text-center">{{ car.model }}</h4>
					<p class="text-muted text-center">Prix: {{ car.price }}â‚¬</p>
				</div>
			</div>
		</div>
	</main>
{% endblock %}